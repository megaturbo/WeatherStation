
package ch.hearc.meteo.imp.afficheur.real.moo;

import org.jfree.data.time.TimeSeries;

public class StationDatas
	{

	/*------------------------------------------------------------------*\
	|*							Constructeurs							*|
	\*------------------------------------------------------------------*/

	public StationDatas(String name)
		{
		this(name, true);
		}

	public StationDatas(String name, boolean visible)
		{
		this.name = name;
		this.visible = visible;

		seriesAltitude = new TimeSeries(name);
		seriesPression = new TimeSeries(name);
		seriesTemperature = new TimeSeries(name);
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/

	/*------------------------------*\
	|*				Set				*|
	\*------------------------------*/

	public void setName(String name)
		{
		this.name = name;
		}

	public void setVisible(boolean visible)
		{
		this.visible = visible;
		}

	/*------------------------------*\
	|*				Get				*|
	\*------------------------------*/

	public String getName()
		{
		return this.name;
		}

	public TimeSeries getSeriesAltitude()
		{
		return this.seriesAltitude;
		}

	public TimeSeries getSeriesPression()
		{
		return this.seriesPression;
		}

	public TimeSeries getSeriesTemperature()
		{
		return this.seriesTemperature;
		}

	/*------------------------------*\
	|*				Is				*|
	\*------------------------------*/

	public boolean isVisible()
		{
		return this.visible;
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	/*------------------------------------------------------------------*\
	|*							Attributs Private						*|
	\*------------------------------------------------------------------*/
	private String name;

	private boolean visible;

	private TimeSeries seriesAltitude;
	private TimeSeries seriesPression;
	private TimeSeries seriesTemperature;

	}
