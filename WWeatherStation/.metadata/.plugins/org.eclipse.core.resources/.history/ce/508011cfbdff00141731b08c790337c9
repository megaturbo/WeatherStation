
package ch.hearc.meteo.imp.afficheur.real.view;

import javax.swing.JFrame;

import ch.hearc.meteo.affichage.view.mainpanel.JPanelMain;
import ch.hearc.meteo.affichage.view.mainpanel.JPanelStationList;

public class JFrameMain extends JFrame
	{

	/*------------------------------------------------------------------*\
	|*							Constructeurs							*|
	\*------------------------------------------------------------------*/

	public JFrameMain()
		{
		geometry();
		control();
		apparence();
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	private void geometry()
		{
		panelMain = new JPanelMain();
		
		add(panelMain);
		}

	private void control()
		{
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		}

	private void apparence()
		{

		setSize(500, 550);
		setResizable(false);
		setVisible(true);
		}


	/*------------------------------------------------------------------*\
	|*							Attributs Private						*|
	\*------------------------------------------------------------------*/

	// Tools
	private JPanelMain panelMain;
	private JPanelStationList panelList;

	}
