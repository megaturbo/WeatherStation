package ch.coursjava.meteo.graph;

import java.awt.GridLayout;

import javax.swing.JPanel;

public class JPanelGraphs extends JPanel
	{

	/*------------------------------------------------------------------*\
	|*							Constructeurs							*|
	\*------------------------------------------------------------------*/

	public JPanelGraphs()
		{
		geometry();
		control();
		appearance();
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/
	public void addValue(double x, double y) {
		panelTemperature.addValue(x, y);
	}

	/*------------------------------*\
	|*				Set				*|
	\*------------------------------*/

	/*------------------------------*\
	|*				Get				*|
	\*------------------------------*/

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	private void geometry()
		{
		panelTemperature = new JPanelGraph();
		panelPressure = new JPanelGraph();
		panelAltitude = new JPanelGraph();

		GridLayout layout = new GridLayout(3, 1);
		setLayout(layout);

		add(panelTemperature);
		add(panelPressure);
		add(panelAltitude);
		}

	private void control()
		{
		// rien
		}

	private void appearance()
		{
		// rien
		}

	/*------------------------------------------------------------------*\
	|*							Attributs Private						*|
	\*------------------------------------------------------------------*/

	// Tools
	private JPanelGraph panelTemperature;
	private JPanelGraph panelPressure;
	private JPanelGraph panelAltitude;


	}

