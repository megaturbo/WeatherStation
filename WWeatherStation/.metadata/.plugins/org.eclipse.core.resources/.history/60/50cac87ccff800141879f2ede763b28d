
package ch.coursjava.meteo.graph.mainpanel;

import javax.swing.JPanel;
import javax.swing.JTabbedPane;

public class JPanelMain extends JPanel
	{

	/*------------------------------------------------------------------*\
	|*							Constructeurs							*|
	\*------------------------------------------------------------------*/

	public JPanelMain()
		{
		geometry();
		control();
		appearance();
		}

	/*------------------------------------------------------------------*\
	|*							Methodes Public							*|
	\*------------------------------------------------------------------*/

	public void addValue(int x, int y)
		{
		panelStationGraphs.addValue(x, y);
		}

	/*------------------------------*\
	|*				Set				*|
	\*------------------------------*/

	/*------------------------------*\
	|*				Get				*|
	\*------------------------------*/

	/*------------------------------------------------------------------*\
	|*							Methodes Private						*|
	\*------------------------------------------------------------------*/

	private void geometry()
		{
		// JComponent : Instanciation
		panelStationGraphs = new JPanelStationGraphs();
		panelMap = new JPanelMap();

		JTabbedPane tabbedPane = new JTabbedPane();
		tabbedPane.addTab("Map", panelMap);
		tabbedPane.addTab("Graph", panelStationGraphs);

		// JComponent : add
		add(tabbedPane);
		}

	private void control()
		{


		// START SIMULATION
		thread = new Thread(new Runnable()
			{
				@Override
				public void run()
					{
					while(true)
						{

						double wait = Math.random() * 2;
						System.out.println("wait: " + wait);

						sleep((long)wait*100);
						t += wait;

						panelGraphs.addValue(t, (Math.random() * 60) - 30);
						}
					}
			});
		// END SIMULATION
		}

	private void sleep(long millis)
		{
		try
			{
			Thread.sleep(millis);
			}
		catch (InterruptedException e)
			{
			e.printStackTrace();
			}
		}

	private void appearance()
		{
		// rien
		}

	/*------------------------------------------------------------------*\
	|*							Attributs Private						*|
	\*------------------------------------------------------------------*/

	// Tools
	private JPanelStationGraphs panelStationGraphs;
	private JPanelMap panelMap;

	// Sim
	private double t;
	private Thread thread;

	}
